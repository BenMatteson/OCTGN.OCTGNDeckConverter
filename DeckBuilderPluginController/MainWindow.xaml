<Window 
    x:Class="DeckBuilderPluginController.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Simple Deck Builder Plugin Controller" 
    Height="350" 
    Width="525"
    x:Name="root"
    >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="Plugins">
                <MenuItem 
                    x:Name="pluginMenuItem"
                    Header="{Binding ElementName=root, Path=MTGDeckConverterPluginMenuItem.Name}" 
                    Click="MenuItem_Click"
                    />
            </MenuItem>
        </Menu>
        
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="This is a shell to test MTGDeckConverter.  Choose it from the Plugins menu above."
            />
    </Grid>
</Window>
